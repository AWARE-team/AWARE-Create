html
    box-sizing: border-box

*, *:before, *:after
    box-sizing: inherit

body
    background: rgb(249, 249, 249)
    overflow-y: scroll
    font-size: 1.5em
    color: primary-text
    font-family: Camphor,Open Sans,Segoe UI,sans-serif
    line-height: 1.8

a
    color: accent-color

a:hover
    color: accent-color

.navbar
    // border-bottom: 1px rgb(207, 207, 207) solid
    background: accent-color
    border-radius: 0
    .nav li a
        font-size: 1.1em
        padding: 20px
        padding-left: 0
        padding-right: 60px
        // color: rgb(106, 107, 106)
        font-weight: 500
        color: white
    .nav li a:hover
        text-decoration: underline
        background-color: accent-color
    .nav .open > a
        background-color: accent-color
    #login-dropdown-list .dropdown-menu a
        background-color: none
        color: accent-color
    #login-dropdown-list .dropdown-menu a:hover
        background-color: transparent
        color: accent-color-dark

.dropdown a
    padding-right: 0 !important

.jumbotron
    align: left
    background: none
    padding-left: 0 !important
    padding-bottom: 108px
    h1
        font-size: 42px
        font-weight: 400
        line-height: 1.6
    .cta
        margin-top: 50px
        .btn:not(:first-child)
            margin-left: 30px

.additional
    margin-top: 34px

footer
    margin-top: 100px

.btn
    text-transform: uppercase

.btn-success
    background-color: accent-color
    border-color: accent-color-dark

.btn-success:hover, .btn-success:active, .btn-success:active:hover, .btn-success:active:focus, .btn-success:focus
    background-color: accent-color-dark
    border-color: accent-color-dark

.promise
    text-align: center
    margin-bottom: 30px
    i
      padding: 20px
    .fa
      color: accent-color

hr
    border-color: accent-color

::selection {
  background: accent-color-light; /* WebKit/Blink Browsers */
}

